<Window x:Class="lab7_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab7_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" Margin="10" x:Name="Spisok"/>
        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
            <TextBox x:Name="InputText" Margin="10" Height="30"/>
            <Button Content="Add" Margin="10" Height="30" Click="Button_Click"/>
            <Button Content="Max" Margin="10" Height="30" Click="Button_Click_1"/>
            <TextBlock x:Name="Result" Margin="10" Height="100"/>
        </StackPanel>
    </Grid>
</Window>
